{% extends 'GeosMainBundle::entityManagement.html.twig' %}
{% block entityManagement %}
<h2 class="page-header" >Region: {{ pagination.totalCount }} Ã©lements dans la liste
	<div style="float: right;" class="btn-group">
		<a class="btn btn-primary" href="{{ path('region_new') }}">
			<i class="icon-plus-sign icon-white"></i>
			ajouter
		</a>
		<a class="btn" href="#">
	    	<i class=" icon-print"></i>
	        imprimer
	    </a>
    </div>
</h2>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
        	<th>{{ pagination.sortable('Id', 'region.id')|raw }}</th>
        	<th>{{ pagination.sortable('Nom', 'region.nom')|raw }}</th>
        	<th>Chef-Lieu</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in pagination %}
        <tr>
        	<td><a href="{{ path('region_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nom }}</td>
            <td>{{ entity.chefLieu }}</td>
            <td>
            	<p>
	                <a href="{{ path('region_show', { 'id': entity.id }) }}" title="Voir">
	                <i class="icon-eye-open"></i>
	                </a>
	                <a href="{{ path('region_edit', { 'id': entity.id }) }}" title="Modifier">
	                <i class="icon-edit"></i>
	                </a>
	               	<a href="{{ path('region_delete', { 'id': entity.id }) }}" title="Supprimer">
	                <i class="icon-trash"></i>
	                </a>
                </p>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{{ pagination.render()|raw }}
{% endblock %}
