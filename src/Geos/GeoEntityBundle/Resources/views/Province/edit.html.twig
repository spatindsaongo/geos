{% extends 'GeosMainBundle::layout.html.twig' %}
{% block content %}
<h2 class="page-header">Modifier une province</h2>

<form class="form-horizontal" action="{{ path('province_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
  <fieldset>
    <div class="control-group">
      <label class="control-label" for="input01">Nom</label>
      <div class="controls" >
      {{ form_widget(edit_form.nom,{"attr":{"class":"input-xlarge"}}) }}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">Region</label>
      <div class="controls" >
      {{ form_widget(edit_form.region,{"attr":{"class":"input-xlarge"}}) }}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">Geometrie</label>
      <div class="controls" >
      {{ form_widget(edit_form.geometrie,{"attr":{"class":"input-xlarge"}}) }}
      </div>
    </div>
    <div class="form-actions">
    	<button class="btn btn-primary" type="submit" class="input-xlarge" >Enregistrer</button>
    	<a class="btn" href="{{ path('province') }}"><i class=" icon-arrow-left"></i>Retourner Ã  la liste</a>
    </div>
  </fieldset>
</form>
{% endblock %}