{% extends 'GeosMainBundle::layout.html.twig' %}
{% block content %}
<h2 class="page-header">Modifier un lot</h2>

<form class="form-horizontal" action="{{ path('lot_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
  <fieldset>
    <div class="control-group">
      <label class="control-label" for="input01">Numero</label>
      <div class="controls" >
      {{ form_widget(edit_form.numero,{"attr":{"class":"input-xlarge"}}) }}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">Section</label>
      <div class="controls" >
      {{ form_widget(edit_form.section,{"attr":{"class":"input-xlarge"}}) }}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">Geometrie</label>
      <div class="controls" >
      {{ form_widget(edit_form.geometrie,{"attr":{"class":"input-xlarge"}}) }}
      </div>
    </div>
    <div class="form-actions">
    	<button class="btn btn-primary" type="submit" class="input-xlarge" >Enregistrer</button>
    	<a class="btn" href="{{ path('lot') }}"><i class=" icon-arrow-left"></i>Retourner Ã  la liste</a>
    </div>
  </fieldset>
</form>
