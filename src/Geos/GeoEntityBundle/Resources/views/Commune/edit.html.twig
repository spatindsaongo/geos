{% extends 'GeosMainBundle::layout.html.twig' %}
{% block content %}
<h2 class="page-header">Modifier une commune</h2>

<form class="form-horizontal" action="{{ path('commune_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
  <fieldset>
    <div class="control-group">
      <label class="control-label" for="input01">Nom</label>
      <div class="controls" >
      {{ form_widget(edit_form.nom,{"attr":{"class":"input-xlarge"}}) }}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">Statut</label>
      <div class="controls" >
      {{ form_widget(edit_form.status,{"attr":{"class":"input-xlarge"}}) }}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">Province</label>
      <div class="controls" >
      {{ form_widget(edit_form.province,{"attr":{"class":"input-xlarge"}}) }}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">Geometrie</label>
      <div class="controls" >
      {{ form_widget(edit_form.geometrie,{"attr":{"class":"input-xlarge"}}) }}
      </div>
    </div>
    <div class="form-actions">
    	<button class="btn btn-primary" type="submit" class="input-xlarge" >Enregistrer</button>
    	<a class="btn" href="{{ path('commune') }}"><i class=" icon-arrow-left"></i>Retourner Ã  la liste</a>
    </div>
  </fieldset>
</form>
<script type="text/javascript">	

	$("#location1").children('select').html("<option value = ''> choisir une province</option>").show();
	$("#location2").children('select').html("<option value = ''> choisir une commune</option>").show();
	$("#location3").children('select').html("<option value = ''> choisir une section</option>").show();
	$("#location4").children('select').html("<option value = ''> choisir un lot</option>").show();
	$("#location5").children('select').html("<option value = ''> choisir une parcelle</option>").show();

	$('#location2').hide();
	$('#location2').children('select').removeAttr('required');
	$('#location3').hide();
	$('#location3').children('select').removeAttr('required');
	$('#location4').hide();
	$('#location4').children('select').removeAttr('required');
	$('#location5').hide();
	$('#location5').children('select').removeAttr('required');
</script>
{% endblock %}