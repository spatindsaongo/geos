{% extends 'GeosMainBundle::entityManagement.html.twig' %}
{% block entityManagement %}
<h2 class="page-header" >Commune: {{ pagination.totalCount }} Ã©lements dans la liste
	<div style="float: right;" class="btn-group">
	<a class="btn btn-primary" href="{{ path('commune_new') }}">
		<i class="icon-plus-sign icon-white"></i>
		ajouter
	</a>
	<a class="btn" href="#">
    	<i class=" icon-print"></i>
        imprimer
    </a>
    </div>

</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
        	<th>{{ pagination.sortable('Id', 'commune.id')|raw }}</th>
        	<th>{{ pagination.sortable('Nom', 'commune.nom')|raw }}</th>    
        	<th>Province</th>
        	<th>Region</th>        
            <th>{{ pagination.sortable('Statut', 'commune.status')|raw }}</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in pagination %}
        <tr>
            <td><a href="{{ path('commune_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nom }}</td>
            <td>{{ entity.province }}</td>            
            <td>{{ entity.province.region }}</td>
            <td>{{ entity.status }}</td>
            <td>
            	<p>
	                <a href="{{ path('commune_show', { 'id': entity.id }) }}" title="Voir">
	                <i class="icon-eye-open"></i>
	                </a>
	                <a href="{{ path('commune_edit', { 'id': entity.id }) }}" title="Modifier">
	                <i class="icon-edit"></i>
	                </a>
	               	<a href="{{ path('commune_delete', { 'id': entity.id }) }}" title="Supprimer">
	                <i class="icon-trash"></i>
	                </a>
                </p>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{{ pagination.render()|raw }}
{% endblock %}