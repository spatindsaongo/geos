<!DOCTYPE html>
<html lang="en">
	<head>
		<title>{% block title %}Geo-Services{% endblock %}</title>
		<!-- Inclusion des feuilles de style -->
		<link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}" />
		<link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap-responsive.min.css') }}" />
		<link rel="stylesheet" type="text/css" href="{{ asset('css/visualize.css') }}" />
		<link rel="stylesheet" type="text/css" href="{{ asset('css/visualize-light.css') }}" />
		<link rel="stylesheet" type="text/css" href="{{ asset('css/base.css') }}" />		
		
		<!-- Inclusion des scripts javascript-->
		<script src="{{ asset('js/jquery-1.7.1.js') }}"type="text/javascript"></script>
		<script src="{{ asset('js/bootstrap.min.js') }}"type="text/javascript"></script>
		<script src="{{ asset('js/functions.js') }}"type="text/javascript"></script>
		<script src="{{ asset('js/openlayers/OpenLayers.js') }}"type="text/javascript"></script>
		<script src="{{ asset('js/visualize.jQuery.js') }}"type="text/javascript"></script>		
	</head>
	
	<body>
		{% block navbar %}
			<div class = "navbar navbar-fixed-top">
				<div class ="navbar-inner" >
					<div class = "container">
						<a class = "brand" href="#">Géo-Services</a>
						<div class="nav-collapse">
				          	<ul class="nav">
				            	<li class="active"><a href="{{ path('_main') }}"><i class="icon-home icon-white"></i>Accueil</a></li>				            	
				            	<li><a href="#"><i class="icon-search icon-white"></i>Recherche</a></li>
				            	<li><a href="{{ path('region') }}"><i class="icon-list-alt icon-white"></i>Gestions des données</a></li>
				            	<li><a href="{{ path('pointeau_nbre_branchement_page') }}"><i class="icon-signal icon-white"></i>Statistiques</a></li>
				            	<li><a href="#"><i class="icon-user icon-white"></i>Gestion des utilisateurs</a></li>
				          	</ul>
				          	{% block login %}
								<form class="navbar-form form-inline pull-right">
									<input type="text" class="input-small" placeholder="Email">
									<input type="password" class="input-small" placeholder="Password">
									<label class="checkbox">
										<input type="checkbox"> Remember me
									</label>
									  <button type="submit" class="btn">Connexion</button>
								</form>
				          	{% endblock %}
				        </div>
					</div>
				</div>
			</div>
		{% endblock %}
		<div  class="container" style = "height:50px">
		</div>
		<div class="container-fluid"> 
			{% block content %}
			{% endblock %}
			<hr>	
		    <footer style = "padding:0 10px 0 10px">
			    <a href="#" style = "padding:0 10px 0 0">Accueil</a>
			    <a href="#" style = "padding:0 10px 0 0">À Propos de Géo-Services</a>
			    <a href="#" style = "padding:0 10px 0 0">Mentions légales</a>
			    <a href="#" style = "padding:0 10px 0 0">Aide</a>
			    <p style="float: right">&copy; Hsud 2011-{{ "now"|date('Y') }}</p>
		    </footer>
		</div>
	</body>
</html>