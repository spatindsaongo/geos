{% extends 'GeosMainBundle::layout.html.twig' %}
{% block content %}
<h2 class="page-header">Vue détaillée du centre de santé
	<div style="float: right;" class="btn-group">
		<a class="btn" href="{{ path('centresante') }}">
			<i class=" icon-arrow-left"></i>
			Retour à liste
		</a>
	    <a class="btn" href="{{ path('centresante_edit', { 'id': entity.id }) }}">
	    	<i class=" icon-edit"></i>
	        Modifier
	    </a>
	   	<a class="btn" href="">
	    	<i class=" icon-print"></i>
	        imprimer
	    </a>
    </div>
</h2>
</div>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="well span4">
    	<div class="row-fluid">
		    <p><strong>Identifant : </strong>{{ entity.id }}</p>
		    <p><strong>Nom : </strong>{{ entity.nom }}</p>
		    <p><strong>Categorie: </strong>{{ entity.categorie }}</p>
		    <p><strong>Propriéte : </strong>{{ entity.propriete }}</p>
		    <p><strong>Date d'ouvertude : </strong>{{ entity.creation|date('d/m/Y') }}</p>
		    <p><strong>Commune: </strong>{{ entity.zoi }}</p>
		    

	    </div>
	    <div class="row-fluid"> 
	    	<h2 class="page-header">Effectif des agents
	    		<div style="float: right;" class="btn-group">
			    	<a class="btn btn-primary" href="{{ path('agent_new', { 'csId': entity.id }) }}">
						<i class="icon-plus-sign icon-white"></i>
						ajouter
					</a>
	    		</div>
	    	</h2>
			<table class="table table-striped table-bordered">
			    <thead>
			        <tr>
			            <th>Libellé</th>
			            <th>Effectifs</th>
			            <th>Actions</th>
			        </tr>
			    </thead>
			    <tbody>
			    {% for agent in entity.agents %}
			        <tr>
			            <td>{{ agent.libelle }}</td>
			            <td>{{ agent.nombre }}</td>
			            <td>
			                <p>
			                    <a href="{{ path('agent_edit', { 'id': agent.id }) }}" title="Modifier">
			                    <i class="icon-edit"></i>
			                    </a>
			                    <a href="{{ path('agent_delete', { 'id': agent.id }) }}" title="Supprimer">
			                    <i class="icon-trash"></i>
			                    </a>			                    
			                </p>
			            </td>
			        </tr>
			    {% endfor %}
			    </tbody>
			</table>	    	
	    </div>
    </div>
    <div class="span7" >
    	{% include 'GeosGeoEntityBundle::map00.html.twig' %}
    </div>
  </div>
</div>
{% endblock %}
