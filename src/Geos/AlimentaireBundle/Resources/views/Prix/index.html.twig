{% extends 'GeosMainBundle::entityManagement.html.twig' %}
{% block entityManagement %}
<h2 class="page-header" >Prix des denrées sur les differents marchés
	<div style="float: right;" class="btn-toolbar">	
		<div class="btn-group">	
			<a class="btn btn-primary" href="{{ path('prix_new') }}">
				<i class="icon-plus-sign icon-white"></i>
				ajouter
			</a>
			<a class="btn" href="#">
		    	<i class=" icon-print"></i>
		        imprimer
		    </a>
		</div>
		<div class="btn-group">	
			<a class="btn " href="#">
				Marche
			</a>
			<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
				<i class="caret"></i>
			</a>
			<ul  class = "dropdown-menu">
				<li style="font-size: 13px;">
					<a href="{{ path('marche') }}">
						<i class="icon-list"></i>
						Lister
					</a>
				</li>
				<li style="font-size: 13px;">
					<a href="{{ path('marche_new') }}">
						<i class="icon-plus-sign"></i>
						Ajouter
					</a>
				</li>
			</ul>
		</div>
		<div class="btn-group">	
			<a class="btn " href="#">
				Denree
			</a>
			<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
				<i class="caret"></i>
			</a>
			<ul  class = "dropdown-menu">
				<li style="font-size: 13px;">
					<a href="{{ path('denree') }}">
						<i class="icon-list"></i>
						Lister
					</a>
				</li>
				<li style="font-size: 13px;">
					<a href="{{ path('denree_new') }}">
						<i class="icon-plus-sign"></i>
						Ajouter
					</a>
				</li>
			</ul>
		</div>
    </div>
</h2>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Denrée</th>
            <th>Marché</th>
            <th>Valeur</th>
            <th>U.M.</th>
            <th>Datevaleur</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in pagination %}
        <tr>
            <td><a href="{{ path('prix_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
			<td>{{ entity.denree }}</td>
            <td>{{ entity.marche }}</td>
            <td>{{ entity.valeur }}</td>
            <td>{{ entity.uniteMesure }}</td>
            <td>{% if entity.dateValeur %}{{ entity.dateValeur|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
            	<p>
	                <a href="{{ path('prix_edit', { 'id': entity.id }) }}" title="Modifier">
	                <i class="icon-edit"></i>
	                </a>
	               	<a href="{{ path('prix_delete', { 'id': entity.id }) }}" title="Supprimer">
	                <i class="icon-trash"></i>
	                </a>
                </p>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{{ pagination.render()|raw }}
{% endblock %}

