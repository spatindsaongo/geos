{% extends 'GeosMainBundle::layout.html.twig' %}
{% block content %}
<h2 class="page-header">Ajouter une prix</h2>

<form class="form-horizontal" action="{{ path('prix_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
  <fieldset>
    <div class="control-group">
      <label class="control-label" for="input01">Denrée</label>
      <div class="controls" >
        {{ form_widget(edit_form.denree,{"attr":{"class":"input-xlarge"}}) }}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">Marche</label>
      <div class="controls">
        {{ form_widget(edit_form.marche)}}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">Montant</label>
      <div class="controls">
        {{ form_widget(edit_form.valeur)}}
        <p>En FCFA</p>
      </div>
      
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">Unité de Mesure</label>
      <div class="controls">
        {{ form_widget(edit_form.uniteMesure)}}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input01">Date et Heure</label>
      <div class="controls">
        {{ form_widget(edit_form.dateValeur)}}
      </div>
    </div>
    <div class="form-actions">
    	<button class="btn btn-primary" type="submit" class="input-xlarge" >Enregistrer</button>
    	<a class="btn" href="{{ path('prix') }}"><i class=" icon-arrow-left"></i>Retourner à la liste</a>
    </div>
  </fieldset>
</form>

{% endblock %}
