{% extends 'GeosMainBundle::entityManagement.html.twig' %}
{% block entityManagement %}
<h2 class="page-header" >
	<div style="float: right;" class="btn-group">
	<a class="btn btn-primary" href="{{ path('pointeau_new') }}">
		<i class="icon-plus-sign icon-white"></i>
		ajouter
	</a>
	<a class="btn" href="#">
    	<i class=" icon-print"></i>
        imprimer
    </a>
    </div>
</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>

        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>
            	<p>
	                <a href="{{ path('_show', { 'id': entity.id }) }}" title="Voir">
	                <i class="icon-eye-open"></i>
	                </a>
	                <a href="{{ path('_edit', { 'id': entity.id }) }}" title="Modifier">
	                <i class="icon-edit"></i>
	                </a>
	               	<a href="{{ path('_delete', { 'id': entity.id }) }}" title="Supprimer">
	                <i class="icon-trash"></i>
	                </a>
                </p>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}